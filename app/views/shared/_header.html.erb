<header class="header-box">
  <h2 class="header-title">
  </h2>
  <ul class='user-info'>
    <% if user_signed_in? %>
      <li><%= link_to 'ユーザー名', "#", class: "user-name" %></li>
      <li><%= link_to 'ログアウト', "#", method: :delete, class: "logout" %></li>
    <% else %>
      <li><%= link_to 'ログイン', "#", class: "login" %></li>
      <li><%= link_to '新規登録', "#", class: "sign-up" %></li>
    <% end %>
  </ul>
</header>